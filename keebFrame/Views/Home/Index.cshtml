@using keebFrame.Models

@{
    ViewData["Title"] = "Home Page";
}

@{ var data = ViewBag.Message; }

<html>
<head>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
	<!-- Bootstrap CSS -->
	<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.2/css/bootstrap.min.css'>
	<!-- Font Awesome CSS -->
	<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.3.1/css/all.css'>
	<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
	<script type="text/javascript" src="https://cdn.datatables.net/1.10.8/js/jquery.dataTables.min.js"></script>

    <link rel="icon" src="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/datatables.min.css" />
    <script type="text/javascript" src="~/datatables.min.js"></script>
    <script src="~/Index.js"></script>

	@*<meta name="viewport" content="width=device-width, initial-scale=1">*@
	<style>
		body, html {
			margin: 0;
			background-image: url('/av3_production_layers_1.png');
			/* Full height */ height: 100%; /* Center and scale the image nicely */
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
			background-color: rgba(255,255,255,0.6);
			background-blend-mode: lighten;
		}

		.main {
			/*position: absolute;*/
			/*background-color: blue;
			filter: alpha(opacity=20);
			opacity: 0.6;*/
			text-align: center;
		}

		p {
			color: white;
			filter: alpha(opacity=100);
			opacity: 1;
			text-align: center;
		}

		#rcorners {
			border-radius: 25px;
			background: #0d0082;
			filter: alpha(opacity=60);
			opacity: 0.8;
			padding: 20px;
			text-align: center;
		}
	</style>
</head>
<body>
    <h3>
        @data.PId
    </h3>


	<div class="main" style="text-align: center;">
		<p id="rcorners">
			KeebFrame is a website about how awesome keyboards are. It will walk you through the world of keyboards from switches to types.
			This website is managed by Ethan Nagelvoort, Karl Horcasitas, and Giemer Lozares. We all have a deep love for keyboards
			and this website helps us express this. Please use it to learn about all the fascinating things about keyboards.
		</p>
	</div>
	<div class="container">
				<div class="d-md-flex justify-content-md-end">
					<button class="btn btn-primary btn-sm" data-target="#loginModal" data-toggle="modal">Login</button>
					<div class="modal fade" id="loginModal" data-backdrop="static" tabindex="-1">
						<div class="modal-dialog float-none">
							<div class="modal-content">
								<div class="modal-header">
									<h4 class="modal-title">Login</h4>
									<button type="button" class="close" data-dismiss="modal">&times;</button>
								</div>
								<div class="modal-body">
									<form>
										<div class="form-group">
											<label for="inputUserName">Username</label>
											<input class="form-control" placeholder="Enter Username" type="text" id="inputUserName" />
										</div>
										<div class="form-group">
											<label for="inputPassword">Password</label>
											<input class="form-control" placeholder="Enter Password" type="password" id="inputPassword" />
										</div>
									</form>
								</div>
								<div class="modal-footer">
									<button type="submit" class="btn btn-primary">Login</button>
									<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
								</div>
							</div>
						</div>
					</div>
				</div>
	</div>
	<table id="example" class="display" style="width:100%">
		<thead>
			<tr>
				<th>PID</th>
				<th>PTitle</th>
				<th>PQuestion</th>
				<th>PAnswer</th>
				<th>PImageId</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
		</tbody>
		@*<tfoot>
            <tr>
                <th>PID</th>
                <th>PTitle</th>
                <th>PQuestion</th>
                <th>PAnswer</th>
                <th>PImageId</th>
            </tr>
		</tfoot>*@
	</table>
</body>

</html>
